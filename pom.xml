  <properties>
    <pulsing.version>0.1-SNAPSHOT</pulsing.version>
    <org.apache.storm.core>1.0.0</org.apache.storm.core>
    <org.apache.storm.kafka>1.0.0</org.apache.storm.kafka>
    <org.apache.storm.starter>1.0.0</org.apache.storm.starter>
    <org.apache.thrift>0.9.3</org.apache.thrift>
    <org.apache.avro>1.8.0</org.apache.avro>
    <org.apache.hadoop.core>1.2.1</org.apache.hadoop.core>
    <org.apache.hadoop.common>2.7.2</org.apache.hadoop.common>
    <org.apache.hadoop.hdfs>2.7.2</org.apache.hadoop.hdfs>
    <dfs-datastores>1.3.6</dfs-datastores>
    <cascalog>2.1.1</cascalog>
    <spring>4.2.6.RELEASE</spring>
	<spring.integration.kafka>1.3.0.RELEASE</spring.integration.kafka>
	<spring.boot.websocket>1.3.5.RELEASE</spring.boot.websocket>
	<spring.messaging>4.2.6.RELEASE</spring.messaging>
	<commons.fileupload>1.3.2</commons.fileupload>
	<javax.servlet.api>3.1.0</javax.servlet.api>
    <jackson>2.7.4</jackson>
    <jetty>9.3.8.v20160314</jetty>
    <kafka.clients>0.9.0.1</kafka.clients>
	<cassandra.client>3.5</cassandra.client>
    <junit>4.12</junit>
    <freemarker>2.3.23</freemarker>
    <jedis>2.8.1</jedis>
  </properties>
  
  <modules>
    <module>flume</module>
    <module>hadoop</module>
    <module>plugin</module>
    <module>serialization</module>
    <module>storm</module>
    <module>web</module>
  </modules>
  
  <build>
  
  	<plugins>
    
  	  <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>${jetty}</version>
        <configuration>
          <scanIntervalSeconds>10</scanIntervalSeconds>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8083</port>
              <maxIdleTime>60000</maxIdleTime>
            </connector>
          </connectors>
          <contextHandlers>
            <contextHandler implementation="org.eclipse.jetty.maven.plugin.JettyWebAppContext">
              <war>${project.basedir}/../web/target/pulsing-web.war</war>
              <contextPath>/pulsing-web</contextPath>
            </contextHandler>
          </contextHandlers>
        </configuration>
      </plugin>
      
    </plugins>
    
  </build>
  
</project>